# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================
# Copy to .env in your inventory-fields-backfill folder and fill in values.
# Same pattern as scrape-manuals-for-inventory.

# ========== PostgreSQL (Supabase / products table) ==========
DB_HOST=your-db-host.example.com
DB_DATABASE=your-database-name
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_PORT=5432

# ========== MongoDB (checkpoint for resumability) ==========
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=Cluster0
MONGO_DB_NAME=checkpoint_db
MONGO_CHECKPOINT_COLLECTION=inventory_backfill_checkpoint

# ========== Typesense (products_search collection) ==========
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=your-typesense-api-key

# ============================================
# OPTIONAL (have defaults)
# ============================================
BATCH_SIZE=1000
SLEEP_BETWEEN_BATCHES=1.0
TYPESENSE_PAGE_SIZE=250
DB_CONNECTION_TIMEOUT=10
TYPESENSE_CONNECTION_TIMEOUT=10
